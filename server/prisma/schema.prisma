// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_STRING")
}

model User {
  id         Int     @id @default(autoincrement())
  name       String
  surname    String
  email      String  @unique
  password   String
  token      Token   @relation(name: "userToken", fields: [tokenValue], references: [token])
  tokenValue String  @unique
  admin      Boolean @default(false)
}

model Token {
  token String @id @default(uuid())
  user  User?  @relation(name: "userToken")
}
